{{ 'content-hub.css' | asset_url | stylesheet_tag }}

<div class="outer-ctr page-width">
  <div class="inner-ctr">
    <div class="col-left">
      <div class="sidebar">
        {% for block in section.blocks %}
          {% if block.type == 'sidebar_menu' %}
            <h2
              class="sidebar-title"
              style="color: {{ block.settings.title_color }};"
            >
              {{ block.settings.sidebar_title }}
            </h2>
            {% if linklists['sidebar-menu'] %}
              <ul>
                {% for link in linklists['sidebar-menu'].links %}
                  <li class="links">
                    {% assign link_no_space = link.title | split: ' ' | join: '' | remove: '?' | downcase %}
                    <a
                      class="sidebar-links"
                      href="#{{ link_no_space }}"
                      style="color: {{ block.settings.sidebar_link_color }}!important; background-color: {{ block.settings.link_background_color }};"
                    >
                      {{- link.title -}}
                    </a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="col-right">
      {% for block in section.blocks %}
        {% if block.type == 'Content' %}
          <div class="block1" id="{{ block.settings.block_id }}">
            {% unless block.settings.heading == blank %}
              <h2
                id="{{ block.id }}-{{ section.id }}"
                class="{{ block.settings.heading_size }}"
                style="color: {{ block.settings.heading_color }};"
              >
                {{ block.settings.heading }}
              </h2>
            {% endunless %}

            {% unless block.settings.subheading == blank %}
              <h4 style="color: {{ block.settings.subheading_color }}">{{ block.settings.subheading }}</h4>
            {% endunless %}
            {% unless block.settings.custom_block == blank %}
              <div class="custom-block" style="color: {{ block.settings.text_color }}">
                {{ block.settings.custom_block }}
              </div>
            {%- endunless %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "content-hub",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "blocks": [
    {
      "type": "sidebar_menu",
      "name": "Seitenmenu",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "sidebar_title",
          "label": "Sidebar Überschrift"
        },
        {
          "type": "color",
          "id": "title_color",
          "label": "Title Color",
          "default": "#6e6e6d"
        },
        {
          "type": "color",
          "id": "sidebar_link_color",
          "label": "Farbe der Sidebar-Links",
          "default": "#6e6e6d"
        },
        {
          "type": "color",
          "id": "link_background_color",
          "label": "Hintergrundfarbe der Sidebar-Links",
          "default": "#fff"
        }
      ]
    },
    {
      "type": "Content",
      "name": "Inhalt mit Texfeld ",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Überschrift",
          "default": "Überschrift Ihres Blogs"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h4",
              "label": "t:sections.all.heading_size.options__1.label"
            },
            {
              "value": "h3",
              "label": "t:sections.all.heading_size.options__2.label"
            },
            {
              "value": "h2",
              "label": "t:sections.all.heading_size.options__3.label"
            }
          ],
          "default": "h2",
          "label": "t:sections.all.heading_size.label"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading"
        },
        {
          "type": "richtext",
          "id": "custom_block",
          "label": "Write text"
        },
        {
          "type": "text",
          "id": "block_id",
          "label": "Anchor (für Zuordnung im Inhaltsverzeichnis)"
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "Farbe der Überschrift",
          "default": "#6e6e6d"
        },
        {
          "type": "color",
          "id": "subheading_color",
          "label": "Farbe der Subüberschrift",
          "default": "#6e6e6d"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Farbe des Textes",
          "default": "#6e6e6d"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "My Blog",
      "label": "Titel eingeben"
    }
  ],
  "presets": [
    {
      "name": "Content Hub",
      "blocks": [
        {
          "type": "Content"
        }
      ]
    }
  ]
}
{% endschema %}

{% javascript %}
  const sidebar = document.querySelector('.sidebar');
  const sidebarTop = sidebar.offsetTop;

  window.addEventListener('scroll', () => {
    if (window.innerWidth >= 768 && window.pageYOffset > sidebarTop) {
      sidebar.classList.add('fixed');
    } else {
      sidebar.classList.remove('fixed');
    }
  });

  const sidebarLinks = document.querySelectorAll('.sidebar-links');
  sidebarLinks.forEach((link) => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      const targetId = link.getAttribute('href');
      const targetSection = document.querySelector(targetId);
      targetSection.scrollIntoView({ behavior: 'smooth' });
    });
  });
{% endjavascript %}
